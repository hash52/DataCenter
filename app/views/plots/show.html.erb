<div id='chart'></div>
<p><%= @x_data %></p>
<script type='text/javascript'>
var x_column = '<%= @x_column %>',
    y_column = '<%= @y_column %>',
    x_data = <%= @x_data %>,
    y_data = <%= @y_data %>

var chart = c3.generate({
  bindto: '#chart',

  data: {
    columns: [
      x_data.unshift(x_column),
      y_data.unshift(y_column)
    ]
  }
});
</script>
