<h1 class="page-header">グラフ作成</h1>
<%= form_for @plot, url: {action: :create} do |f| %>
  <div class="form-group">
    <%= f.label "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label "グラフタイプ" %>
    <%= f.select :type, [[:line, :line]] %>
  </div>
  <div class="form-group">
    <%= f.label "x軸に使用するデータ" %>
    <%= f.select :x_column, @columns.each { |c| [c, c] } %>
  </div>
  <div class="form-group">
    <%= f.label "y軸に使用するデータ" %>
    <%= f.select :y_column, @columns %>
  </div>

  <%= f.submit "Create" %>
<% end %>
